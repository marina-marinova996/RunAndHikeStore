@using RunAndHikeStore.Web.ViewModels.Product
@model ManageAllProductsViewModel

<h2 class="text-center mt-3">@ViewBag.Title</h2>
<hr />

<form method="get">
    <div class="row justify-content-between">
        <div class="col-md-6">
            <label asp-for="Sorting"></label>
            <select asp-for="Sorting" class="form-control">
                <option value="0">Newest</option>
                <option value="1">Lowest price first</option>
                <option value="2">Highest price first</option>
            </select>
        </div>
        <div class="col-md-6 mb-2">
            <label asp-for="SearchTerm"></label>
            <div class="input-group">
                <input asp-for="SearchTerm" class="form-control" placeholder="Search here..">
                <button type="submit" class="btn btn-primary input-group-append">Search</button>
            </div>
        </div>
    </div>
</form>
@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalProductsCount / ManageAllProductsViewModel.ProductsPerPage);
}
<div class="row mb-3">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Product"
           asp-action="ManageAll"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage || !Model.Products.Any();
    }
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="Product"
           asp-action="ManageAll"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>
<div class="d-grid gap-2 mb-2">
    <a asp-controller="Product" asp-action="Add" class="btn btn-success">Add New Product</a>
</div>
<table class="table table-hover">
    <thead>
        <tr class="table-dark text-center">
            <th scope="col">Product Number</th>
            <th scope="col">Brand</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Type</th>
            <th scope="col">Gender</th>
            <th scope="col">Color</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr class="table-dark text-center">
                <td>@product.ProductNumber</td>
                <td>@product.Brand</td>
                <td>@product.Name</td>
                <td>@product.ProductType</td>
                <td>@product.Gender</td>
                <td>@product.Color</td>
                <td>@product.UnitPrice.ToString() EUR</td>
                <td>
                    <a asp-controller="Stock" asp-action="AddStock" asp-route-productId="@product.Id" method="get" class="btn btn-success mr-2">Add stock</a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning mr-2">Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" method="get" class="btn btn-danger mr-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}