@model LoginViewModel


<div class="row h-75 justify-content-center align-items-center">
    <div class="col-md-4">
        <form id="loginForm" method="post">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <hr />
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Email.." autocomplete="username" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password.." class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-4 mb-2">Login</button>
            <div>
                <p>Don't have a profile?</p>
                <a class="w-100 btn btn-lg btn-success mt-2" asp-action="Register" method="get" asp-controller="Account">Register now!</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}