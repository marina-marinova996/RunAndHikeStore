@using RunAndHikeStore.Web.ViewModels.Product
@model AddProductViewModel

<h2 class="text-center mt-3">@ViewData["Title"]</h2>
<hr />


<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-area="Admin" method="post">
            <partial name="_ProductFormPartial" model="@Model" />
                <input class="btn-lg btn-success col-md-4 mt-3" type="submit" value="Create" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $("#selectCategories").selectize({
            sortField: "text",
        });</script>
}