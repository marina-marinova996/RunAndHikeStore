@using RunAndHikeStore.Web.ViewModels.User
@model UserRolesViewModel
@{
    ViewData["Title"] = "User Roles";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<h2 class="text-center mt-3">@ViewData["Title"]</h2>
<hr />


<div class="row justify-content-center">
    <div class="col-6">
        <form method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <input type="hidden" name="FirstName" value="@Model.Name" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h4>Email: @Html.DisplayFor(m => m.Email)</h4>
                <h4>Name: @Html.DisplayFor(m => m.Name)</h4>
            </div>
            <div class="form-floating">
                <div class="form-group">
                    <label>User Roles</label>
                    <select id ="selectRoles" asp-for="RoleNames" asp-items="@items" class="form-control">
                    </select>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $("#selectRoles").selectize({
  plugins: ["remove_button"],
  delimiter: ",",
  persist: false,
  create: function (input) {
    return {
      value: input,
      text: input,
    };
  },
});</script>
}