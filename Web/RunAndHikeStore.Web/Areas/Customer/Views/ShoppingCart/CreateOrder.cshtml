@using RunAndHikeStore.Web.ViewModels.ShoppingCart
@model ShoppingCartViewModel

<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card mb-4">
            <partial name="_BillingDetailsPartial"/>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h4 class="mb-0 text-center">Summary</h4>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                        Products
                        <span>@Model.CartItems.Sum(x=> Convert.ToDecimal(x.Total)).ToString("f2") EUR</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                        Shipping
                        <span>0.00 EUR</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>Total amount</strong>
                            <strong>
                                <p class="mb-0">(including VAT)</p>
                            </strong>
                        </div>
                        <span><strong>@Model.CartItems.Sum(x=> Convert.ToDecimal(x.Total)).ToString("f2") EUR</strong></span>
                    </li>
                </ul>
                <button type="button" class="btn btn-success btn-lg btn-block">Make purchase</button>
                <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="btn btn-primary btn-lg btn-block">Return to Shopping Cart</a>
            </div>
        </div>
    </div>
</div>