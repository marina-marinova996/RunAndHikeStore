@using RunAndHikeStore.Web.ViewModels.Order
@model CreateOrderViewModel

<form method="post">
<div class="row">
    <div class="col-md-8 mb-2">
        <div class="card mb-2">
            <div class="card-header py-3">
                <h4 class="mb-0 text-center">Billing Details</h4>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label">First Name</label>
                            <input type="hidden" asp-for="@Model.BillingDetails.Id" />
                            <input asp-for="@Model.BillingDetails.FirstName" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label">Last Name</label>
                                <input asp-for="@Model.BillingDetails.LastName" class="form-control" readonly />
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label">Street Address</label>
                                <input asp-for="@Model.BillingDetails.StreetAddress" class="form-control" readonly />
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label">City</label>
                                <input asp-for="@Model.BillingDetails.City" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label">Country</label>
                                <input asp-for="@Model.BillingDetails.Country" class="form-control" readonly />
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <div class="form-outline">
                            <label class="form-label">Postal Code</label>
                                <input asp-for="@Model.BillingDetails.PostalCode" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline mb-4">
                            <label class="form-label">Phone Number</label>
                                <input asp-for="@Model.BillingDetails.PhoneNumber" class="form-control" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-2">
        <div class="card mb-2">
            <div class="card-header py-3">
                <h4 class="mb-0 text-center">Summary</h4>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                        Products
                        <span>@Model.CartItems.Sum(x=> Convert.ToDecimal(x.Total)).ToString("f2") EUR</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                        Shipping
                        <span>0.00 EUR</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>Total amount</strong>
                            <strong>
                                <p class="mb-0">(including VAT)</p>
                            </strong>
                        </div>
                        <span><strong>@Model.CartItems.Sum(x=> Convert.ToDecimal(x.Total)).ToString("f2") EUR</strong></span>
                    </li>
                </ul>
                <button asp-area="Customer" asp-controller="ShoppingCart" asp-action="CreateOrder" type="submit" class="btn btn-success btn-lg btn-block">Make purchase</button>
                <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="btn btn-primary btn-lg btn-block">Return to Shopping Cart</a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8 mb-2">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h4 class="mb-0 text-center">Delivery Address</h4>
            </div>
            <div class="card-body">
            <div class="row mb-2">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Street Address</label>
                                <input asp-for="@Model.DeliveryAddress.StreetAddress" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">City</label>
                                <input asp-for="@Model.DeliveryAddress.StreetAddress" class="form-control" readonly />
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Country</label>
                                <input asp-for="@Model.DeliveryAddress.Country" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label">Postal Code</label>
                                <input asp-for="@Model.DeliveryAddress.PostalCode" class="form-control" readonly />
                    </div>
                </div>
                </div>
            </div>
        </div>
        <div class="text-center">
            <a asp-area="Customer" asp-controller="Customer" asp-action="Details" asp-route-billingDetailsId="@Model.BillingDetails.Id" class="btn btn-warning btn-lg">Edit Details</a>
        </div>
    </div>
</div>
</form>